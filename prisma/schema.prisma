generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model EventRequest {
  id           Int      @id @default(autoincrement())
  clientName   String
  memo         String
  eventType    String
  fromDate     DateTime
  toDate       DateTime
  numAttend    Int
  decorations  Boolean
  parties      Boolean
  photos       Boolean
  meals        Boolean
  drinks       Boolean
  createdAt    DateTime @default(now())
}

